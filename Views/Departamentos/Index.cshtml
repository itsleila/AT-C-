@model IEnumerable<InfnetMVC.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<div class=" px-5 hero_area">
<h1 class="pt-2">Departamentos</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Local)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Local)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepartamentoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.DepartamentoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.DepartamentoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>